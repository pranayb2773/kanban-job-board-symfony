{% extends 'base.html.twig' %}

{% block title %}{{ job_board.name }} - Kanban Board{% endblock %}

{% block body %}
<div class="container-fluid px-lg-5 py-4" data-controller="kanban" data-kanban-board-id-value="{{ job_board.id }}">
    {# Header #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ job_board.name }}</li>
                </ol>
            </nav>
            <h1 class="h3 fw-bold mb-1">{{ job_board.name }}</h1>
            {% if job_board.description %}
                <p class="text-muted mb-0">{{ job_board.description }}</p>
            {% endif %}
        </div>
        <div>
            <button
                type="button"
                class="btn btn-primary"
                data-action="click->kanban#openAddModal"
            >
                <i class="bi bi-plus-circle me-2"></i>Add Application
            </button>
        </div>
    </div>

    {# Kanban Board #}
    <div class="kanban-board" data-kanban-target="board">
        <div class="row g-3">
            {% for status in statuses %}
                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="kanban-column">
                        {# Column Header #}
                        <div class="kanban-column-header bg-light p-3 rounded-top border">
                            <h6 class="fw-bold mb-0 d-flex align-items-center justify-content-between">
                                <span class="text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                                    {{ status.value|capitalize }}
                                </span>
                                <span class="badge bg-secondary">
                                    {{ applications_by_status[status.value]|length }}
                                </span>
                            </h6>
                        </div>

                        {# Column Body - Drop Zone #}
                        <div
                            class="kanban-column-body p-2 bg-white border border-top-0 rounded-bottom"
                            style="min-height: 600px;"
                            data-kanban-target="column"
                            data-status="{{ status.value }}"
                        >
                            {% for application in applications_by_status[status.value] %}
                                {% include 'job_board/_application_card.html.twig' with {
                                    'application': application
                                } %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    {# Add Application Modal #}
    <div class="modal fade" id="addApplicationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" id="addApplicationModalContent">
                {# Content loaded via AJAX #}
            </div>
        </div>
    </div>

    {# View Details Modal #}
    <div class="modal fade" id="viewApplicationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg" style="max-height: calc(100vh - 3.5rem); margin: 1.75rem auto;">
            <div class="modal-content" id="viewApplicationModalContent" style="max-height: calc(100vh - 3.5rem);">
                {# Content loaded via AJAX #}
            </div>
        </div>
    </div>

    {# Edit Application Modal #}
    <div class="modal fade" id="editApplicationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" id="editApplicationModalContent">
                {# Content loaded via AJAX #}
            </div>
        </div>
    </div>

    {# Delete Confirmation Modal #}
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle text-danger me-2"></i>
                        Confirm Delete
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">Are you sure you want to delete this job application? This action cannot be undone.</p>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteButton" data-action="click->kanban#confirmDelete">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .kanban-board {
            overflow-x: auto;
        }
        .kanban-column-body {
            overflow-y: auto;
            max-height: 80vh;
        }
        .kanban-card {
            cursor: move;
            transition: all 0.2s ease;
        }
        .kanban-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .kanban-card.dragging {
            opacity: 0.5;
        }
        .kanban-column-body.drag-over {
            background-color: #f0f8ff;
        }
    </style>
{% endblock %}
