<div
    class="kanban-card card mb-2 shadow-sm"
    data-kanban-target="card"
    data-application-id="{{ application.id }}"
    data-action="click->kanban#openDetailsModal"
    draggable="true"
>
    <div class="card-body p-3">
        <h6 class="card-title fw-bold mb-1 text-truncate">{{ application.company }}</h6>
        <p class="card-subtitle text-muted small mb-2 text-truncate">{{ application.jobTitle }}</p>

        <div class="d-flex align-items-center justify-content-between">
            <small class="text-muted">
                <i class="bi bi-geo-alt"></i> {{ application.location }}
            </small>
        </div>

        {% if application.salary %}
            <div class="mt-2">
                <small class="text-success fw-semibold">
                    <i class="bi bi-currency-pound"></i> {{ application.salary }}
                </small>
            </div>
        {% endif %}

        {% if application.url %}
            <div class="mt-2">
                <a href="{{ application.url }}" target="_blank" class="small text-decoration-none" onclick="event.stopPropagation();">
                    <i class="bi bi-link-45deg"></i> View Posting
                </a>
            </div>
        {% endif %}

        <div class="mt-2 pt-2 border-top">
            <small class="text-muted">
                <i class="bi bi-calendar3"></i> {{ application.createdAt|date('M d, Y') }}
            </small>
        </div>
    </div>
</div>
