{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% form_theme registrationForm 'form/bootstrap_form_theme.html.twig' %}

{% block body %}
    <div class="d-flex min-vh-100 flex-column justify-content-center py-5 bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <h2 class="text-center mb-4 fw-bold">Create your account</h2>

                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            {{ form_start(registrationForm) }}
                                {{ form_row(registrationForm.name, {
                                    label: 'Full name'
                                }) }}
                                {{ form_row(registrationForm.email, {
                                    label: 'Email address'
                                }) }}
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Password'
                                }) }}
                                {{ form_row(registrationForm.agreeTerms, {
                                    label: 'I agree to the terms and conditions'
                                }) }}

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        Register
                                    </button>
                                </div>
                            {{ form_end(registrationForm) }}

                            <p class="text-center mt-4 mb-0 text-muted">
                                Already have an account?
                                <a href="{{ path('app_login') }}" class="text-decoration-none fw-semibold">Sign in</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
